@model IEnumerable<WebMobile.Models.Certificate>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMobile.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-12 mt-5">
            <h2>Index</h2>

            <p>
                @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
            </p>
            <table class="table align-middle">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Client_Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Md5sum)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Client_Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Md5sum)
                        </td>
                        <td>
                            <div class="btn-group-vertical" role="group">
                                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                                @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "btn btn-info" })
                                @Html.ActionLink("Deletar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                            </div>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-12">
            @Html.ActionLink("Voltar", "Index", "Mobile", null, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>
